{
  "name": "in-memoriam",
  "version": "0.2.5",
  "description": "Cartographie des décès militaires et civils Françaises",
  "main": "index.html",
  "repository": "https://github.com/Geolim4/In-Memoriam.git",
  "author": "Georges.L <contact@geolim4.com>",
  "license": "GPL-2.0",
  "private": false,
  "scripts": {
    "build-css": "stylelint 'src/**/*.scss' && yarn webpack --config './webpack/cssConfig.js'",
    "build-js": "yarn lint && yarn webpack --config './webpack/jsConfig.js'",
    "build": "yarn build-css && yarn build-js",
    "lint": "tslint --project ./tsconfig.json",
    "lint-fix": "tslint --project ./tsconfig.json --fix",
    "watch": "npm-watch"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "watch": {
    "build-css": {
      "extensions": [
        "scss"
      ],
      "ignore": [
        "assets",
        "node_modules"
      ],
      "patterns": [
        "src/"
      ]
    },
    "build-js": {
      "extensions": [
        "ts"
      ],
      "ignore": [
        "assets",
        "node_modules"
      ],
      "patterns": [
        "src/"
      ]
    }
  },
  "dependencies": {
    "@google/markerclusterer": "^1.0.3",
    "bootstrap": "^3.4.1",
    "jquery": "^3.4.1",
    "load-google-maps-api": "^2.0.1",
    "popper.js": "^1.15.0",
    "qwest": "^4.5.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/googlemaps": "^3.37.4",
    "@types/markerclustererplus": "^2.1.33",
    "@types/node": "^12.7.2",
    "@types/qwest": "^1.7.28",
    "autoprefixer": "^9.6.1",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "extract-loader": "^3.1.0",
    "file-loader": "^4.2.0",
    "node-sass": "^4.12.0",
    "npm-watch": "^0.6.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "path": "^0.12.7",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "terser-webpack-plugin": "^1.4.1",
    "ts-loader": "^6.0.4",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-fix-style-only-entries": "^0.3.1"
  }
}
