{% set modalContent = escapeContent ? content|escape : content %}
<div class="modal micromodal-slide{% if isError %} modal__error{% endif %}" id="modal-info" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
        <div class="modal__container{% if isLarge %} large{% endif %}" role="dialog" aria-modal="true" aria-labelledby="modal-info-title">
            <header class="modal__header">
                <div>
                    <h2 class="modal__title" id="modal-info-title">{{ title }}</h2>
                </div>
                <button class="modal__close" aria-label="Close modal" data-micromodal-close></button>
            </header>
            <main class="modal__content" id="modal-info-content">{{ nl2brContent ? modalContent|nl2br : modalContent }}</main>
            <footer class="modal__footer">
                {% if hasConfirm or hasCancel %}
                    <button class="modal__btn{% if cancelButtonColor %} modal__btn-{{cancelButtonColor  }}{% endif %}" data-micromodal-close aria-label="Fermer la popup" data-micromodal-role="cancel">{{ cancelLabel }}</button>
                {% endif %}
                <button class="modal__btn{% if confirmButtonColor %} modal__btn-{{confirmButtonColor  }}{% endif %}" data-micromodal-close aria-label="Fermer la popup" data-micromodal-role="validate">{{ okLabel }}</button>
            </footer>
        </div>
    </div>
</div>
